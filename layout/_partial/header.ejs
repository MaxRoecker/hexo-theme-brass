<header id="header">
      <div class="container">
        <div class="row left-xs middle-xs">
          <div class="col-xs-12 col-md-3">
            <h1 class="sitename">
              <a href="/" class="text-decoration--none display--block">
                <% if (site.data.meta.site.logo != null) { %>
                <amp-img
                    src="<%= site.data.meta.site.logo %>"
                    alt="Site Logo"
                    width="100"
                    height="100">
                  <noscript>
                    <img src="<%= site.data.meta.site.logo %>" alt="Site Logo" />
                  </noscript>
                </amp-img>
                <% } else { %>
                <%= config.title %>
                <% } %>
              </a>
            </h1>
          </div>
          <div class="col-xs-10 col-xs-offset-1
                      col-sm-8 col-sm-offset-2
                      col-md-6 col-md-offset-3
                      col-lg-6 col-lg-offset-3">
            <% if (site.data.meta.site.menu != null) { %>
            <nav id="navigation-main">
              <ul class="navigation row between-xs middle-xs center-xs between-md end-md">
              <% for (const name in site.data.meta.site.menu) {
                  const uri = site.data.meta.site.menu[name]%>
              <% if (url.indexOf(uri) >= 0) { %>
                <li class="navigation__item--selected">
                  <a href="#" class="navigation__item__link">
                    <%= name %>
                  </a>
                </li>
              <% } else { %>
                <li class="navigation__item">
                  <a href="<%= uri %>" class="navigation__item__link">
                    <%= name %>
                  </a>
                </li>
              <% } %>
              <% } %>
              </ul>
            </nav>
            <% } %>
          </div>
        </div>
      </div>
    </header>
